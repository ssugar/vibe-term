{
  "name": "cc-tui-hud",
  "version": "1.0.0",
  "description": "Claude Code TUI HUD - Monitor multiple Claude Code instances",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "cc-tui-hud": "dist/cli.js"
  },
