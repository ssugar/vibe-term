    "tui",
    "terminal",
    "hud"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ssugar/cc-tui-hud/issues"
  },
  "homepage": "https://github.com/ssugar/cc-tui-hud#readme",
  "dependencies": {
    "figures": "^6.1.0",
    "ink": "^6.6.0",
    "meow": "^14.0.0",
    "react": "^19.2.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
