{
  "name": "vibe-term",
  "version": "1.0.0",
  "description": "Terminal HUD for managing Claude Code sessions",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "vibe-term": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "build": "tsup src/cli.tsx --format esm --dts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssugar/vibe-term.git"
  },
  "keywords": [
    "vibe-term",
    "terminal",
    "tui",
    "hud",
    "tmux",
    "claude",
    "claude-code",
    "sessions"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ssugar/vibe-term/issues"
  },
  "homepage": "https://github.com/ssugar/vibe-term#readme",
  "dependencies": {
    "figures": "^6.1.0",
    "ink": "^6.6.0",
    "meow": "^14.0.0",
    "micromatch": "^4.0.8",
    "picocolors": "^1.1.1",
    "react": "^19.2.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.10",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
